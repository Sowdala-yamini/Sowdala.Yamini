# Input student details
sno = int(input("Enter student serial number: "))
name = input("Enter student name: ")
group = input("Enter student group: ")

# Input subject marks
s1 = int(input("Enter marks for subject 1: "))
s2 = int(input("Enter marks for subject 2: "))
s3 = int(input("Enter marks for subject 3: "))

# Calculate total marks
total = s1 + s2 + s3

# Calculate average marks
avg = total / 3

# Print the total and average marks
print(f"Total marks: {total}")
print(f"Average marks: {avg:.2f}")
